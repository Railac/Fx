<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="217.0" prefWidth="211.0">
	<!-- 대출 버튼 클릭했을떄 대출 창-->
	<padding>
		<Insets topRightBottomLeft="10" />
	</padding>
	<center>
		<GridPane hgap="10" vgap="10" alignment="CENTER">
			<children>
				<Label prefWidth="50" text="도서명" GridPane.columnIndex="0" GridPane.rowIndex="0" />
   				<Label prefWidth="50" text="대출여부" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   				<Label prefWidth="50" text="반납일" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   				<TextField id="txtTitle" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   				<TextField id="txtAuthor" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   				<TextField id="txtPublisher" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="2" />
			</children>
		
		</GridPane>
	
	</center>
	
</BorderPane>

